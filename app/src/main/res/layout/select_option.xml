<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="20dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Add To Archive"
                android:id="@+id/addArchive"
                android:textSize="@dimen/_15font_mdp"
                android:textColor="@color/blurBlack"
                android:textStyle="bold"
                android:gravity="center|start"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/archive"
                android:drawableEnd="@drawable/archive"
                android:fontFamily="sans-serif"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/blurBlack"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/addRecent"
                android:text="Add To Recent"
                android:textSize="@dimen/_15font_mdp"
                android:textColor="@color/blurBlack"
                android:textStyle="bold"
                android:gravity="center|start"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/recent"
                android:drawableEnd="@drawable/recent"
                android:fontFamily="sans-serif"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/blurBlack"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>